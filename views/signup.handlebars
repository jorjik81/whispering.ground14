<div class="d-flex justify-content-center">
  <div class="mt-4 card border p-4 w-50 bg-light text-dark">
    <h2 class="text-center mb-4">Signup:</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" class="form-label">Name:</label>
        <input class="form-input form-control mt-2" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="form-label">Password:</label>
        <input class="form-input form-control mt-2" type="password" id="password-signup" />
      </div>
      <div class="d-flex form-group justify-content-center mt-3">
        <button class="btn btn-success w-50" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

