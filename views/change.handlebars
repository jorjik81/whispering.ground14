<div class='d-flex justify-content-center'>
  <div class='d-flex justify-content-center mt-3 w-25'>
    <div class="card text-white bg-primary mb-3 flex-fill me-4">
      <div class='text-white bg-primary'>
        <div class="d-flex card-header justify-content-center">
          <h1>{{blogpost.title}}</h1>
        </div>
      </div>
      <div class="d-flex card-title justify-content-center">
        <p>Text: {{blogpost.text}}</p>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-danger del-btn" data-id="{{blogpost.id}}">Delete</button>
      </div>
    </div>
  </div>
  <div class="justify-content-center mt-3 card border p-3 w-25">
    <form class="form edit-form" data-id="{{blogpost.id}}">
      <div class="form-group">
        <label for="title-edit" class="form-label">New title:</label>
        <input class="form-input form-control mt-3" type="text" id="title-edit" />
      </div>
      <div class="form-group">
        <label for="text-edit" class="form-label">New Text:</label>
        <input class="form-input form-control mt-3" type="text" id="text-edit" />
      </div>
      <div class="d-flex form-group justify-content-center mt-3">
        <button class="btn btn-success" type="submit">Change!</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/dashboard.js"></script>