<div class="d-flex justify-content-center">
  <div class="mt-4 card border p-4 w-50 bg-light text-dark">
    <h2 class="text-center mb-4">Login:</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="name-login" class="form-label">Username:</label>
        <input class="form-input form-control mt-2" type="text" id="name-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="form-label">Password:</label>
        <input class="form-input form-control mt-2" type="password" id="password-login" />
      </div>
      <div class="d-flex form-group justify-content-center mt-3">
        <button class="btn btn-success w-50" type="submit">Login</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>